<h1 class="display-4"><%= @event.name %></h1>
<div class="row">
  <div class="col-xs-12 col-md-6">
    <p class="lead" style="max-width: 720px;"><%= @event.synopsis %></p>
    <%= link_to "Learn More", @event.url, class: 'btn btn-info' %>
  </div>
</div>
<br />
<% if @event.organizations.any? %>
  <h2>How are companies responding?</h2>
  <ul>
    <% @event.organizations.each do |organization| %>
      <li><%= link_to organization.name, organization_event_path(organization.id, @event.id) %></li>
    <% end %>
  </ul>
<% end %>